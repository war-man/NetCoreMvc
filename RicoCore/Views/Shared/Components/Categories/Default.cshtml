@using RicoCore.Services.Content.PostCategories.Dtos;
@model List<PostCategoryViewModel>

@if (Model.Count() > 0)
{
    <div class="popular-posts widget widget_categories">
        <h3 class="widget-title"><span>Danh mục bài viết</span></h3>
        <ul>
            @foreach(var item in Model)
                {
                    <li><a href="/danh-muc/@item.Url">@item.Name</a></li>
                }
        </ul>
    </div>
    
}
