@model List<MenuViewModel>

<div id="jtv-mobile-menu">
    <ul>
        <li>
            <div class="jtv-search-mob">
                <form id="search1" name="search">
                    @*<div class="input-group">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit"><i class="fa fa-search"></i> </button>
                        </div>
                        <input type="text" class="form-control simple" placeholder="Tìm kiếm ..." name="srch-term" id="srch-term">
                    </div>*@
                </form>
            </div>
        </li>
        @if (Model.Count() > 0)
        {
            var list = Model.Where(v => v.ParentId == null).OrderBy(v => v.SortOrder);
            @foreach (var item in list)
            {
                var children = Model.Where(c => c.ParentId == item.Id).OrderBy(c => c.SortOrder);
                @if (children.Count() > 0)
                {
                    <li>
                        <a href="/@item.Url">@item.Name</a>
                        <ul>
                            @foreach (var child in children)
                            {
                                var descendants = Model.Where(z => z.ParentId == child.Id).OrderBy(z => z.SortOrder);
                                @if (descendants.Count() > 0)
                                {
                                    <li> <a href="/@child.Url"><span>@child.Name</span> </a>
                                         <ul>
                                             @foreach (var descendant in descendants)
                                             {
                                                 <li> <a href="/@descendant.Url"><span>@descendant.Name</span></a> </li>
                                             }
                                         </ul>
                                    </li>
                                }
                                else
                                {
                                    <li> <a href="/@child.Url"><span>@child.Name</span> </a></li>
                                }
                            }
                        </ul>
                    </li>
                }
                else
                {
                    <li> <a href="@item.Url"><span>@item.Name</span></a> </li>
                }
            }
        }
      
    </ul>
