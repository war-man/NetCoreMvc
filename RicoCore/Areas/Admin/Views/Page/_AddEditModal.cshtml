<div id="modal-add-edit" class="bootbox modal fade modal-darkorange in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Thêm/sửa trang đơn</h4>
            </div>
            <div class="modal-body">
                <div id="horizontal-form">
                    <form class="form-horizontal" role="form" id="frmMaintainance">
                        <div class="form-group">
                            <input type="hidden" id="hidId" value="00000000-0000-0000-0000-000000000000" />
                            <label for="txtName" class="col-sm-2 control-label no-padding-right">Tên trang đơn *</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtName" class="form-control" id="txtName" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtUrl" class="col-sm-2 control-label no-padding-right">Url *</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtUrl" class="form-control" id="txtUrl" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="txtMetaTitle" class="col-sm-2 control-label no-padding-right">Tiêu đề (Meta Title SEO) *</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtMetaTitle" class="form-control" id="txtMetaTitle" placeholder="Meta Title (SEO)" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtMetaKeywords" class="col-sm-2 control-label no-padding-right">Từ khóa (Meta Keywords SEO) *</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtMetaKeywords" class="form-control" id="txtMetaKeywords" placeholder="Meta Keywords (SEO)" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtMetaDescription" class="col-sm-2 control-label no-padding-right">Mô tả (Meta Description SEO) *</label>
                            <div class="col-sm-10">
                                <textarea rows="3" name="txtMetaDescription" class="form-control" id="txtMetaDescription" placeholder="Meta Description (SEO)" required></textarea>
                            </div>
                        </div>


                        <div class="form-group">
                            <label for="txtContent" class="col-sm-2 control-label no-padding-right">Nội dung</label>
                            <div class="col-sm-10">
                                <textarea id="txtContent" rows="6" class="form-control"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="txtCode" class="col-sm-2 control-label no-padding-right">Mã Code</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtCode" class="form-control" id="txtCode">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" checked="checked" id="ckStatus">
                                        <span class="text">Hoạt động</span>
                                    </label>

                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="button" id="btn-save" class="btn btn-success">Lưu</button>
                                <button type="button" id="btn-cancel" data-dismiss="modal" class="btn btn-danger">Hủy bỏ</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>