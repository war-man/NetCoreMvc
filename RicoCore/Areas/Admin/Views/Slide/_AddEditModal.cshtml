<div id="modal-add-edit" class="bootbox modal fade modal-darkorange in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Slide</h4>
            </div>
            <div class="modal-body">
                <div id="horizontal-form">

                    <form class="form-horizontal" role="form" id="frmMaintainance">
                        <div class="form-group">
                            <input type="hidden" id="hidSlideId" />
                            <label for="txtName" class="col-sm-2 control-label no-padding-right">Tên slide*</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtName" class="form-control" id="txtName">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="SlideGroup" class="col-sm-2 control-label no-padding-right">Vị trí*</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="SlideGroup" name="SlideGroup">
                                    <option value="1">Top</option>
                                    <option value="2">Nhánh</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="txtImage" class="col-sm-2 control-label no-padding-right">Ảnh slide*</label>
                            <div class="col-sm-6">
                                <div class="input-group">
                                    <input type="text" name="txtImage" class="form-control" id="txtImage" />
                                    <input type="file" id="fileInputImage" style="display:none" />
                                    <span class="input-group-btn">
                                        <input type="button" id="btnSelectImg" class="btn btn-default" value="Browser" />
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="txtUrl" class="col-sm-2 control-label no-padding-right">Url*</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtUrl" class="form-control" id="txtUrl">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="txtSortOrder" class="col-sm-2 control-label no-padding-right">Thứ tự*</label>
                            <div class="col-sm-10">
                                <input type="number" name="txtSortOrder" class="form-control" id="txtSortOrder">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="ckStatus" class="col-sm-2 control-label no-padding-right">Hoạt động</label>
                            <div class="col-sm-10">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" checked="checked" name="ckStatus" id="ckStatus">
                                        <span class="text">Kích hoạt</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="button" id="btn-save" class="btn btn-success">Lưu lại</button>
                                <button type="button" id="btn-cancel" data-dismiss="modal" class="btn btn-danger">Hủy bỏ</button>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="txtContent" class="col-sm-2 control-label no-padding-right">Nội dung</label>
                            <div class="col-sm-10">
                                <textarea name="txtContent" id="txtContent" rows="10" class="form-control"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtMainCaption" class="col-sm-2 control-label no-padding-right">Tiêu đề chính</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtMainCaption" class="form-control" id="txtMainCaption">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtSubCaption" class="col-sm-2 control-label no-padding-right">Tiêu đề phụ</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtSubCaption" class="form-control" id="txtSubCaption">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtSmallCaption" class="col-sm-2 control-label no-padding-right">Tiêu đề nhỏ</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtSmallCaption" class="form-control" id="txtSmallCaption">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtCallToAction" class="col-sm-2 control-label no-padding-right">Hành động</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtCallToAction" class="form-control" id="txtCallToAction">
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>