<div id="modal-add-edit" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Menu</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="horizontal-form">
                    <form class="form-horizontal" role="form" id="frmMaintainance">

                        <div class="form-group">
                            <input type="hidden" id="hidMenuId" />
                            @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
                            <label for="txtName" class="col-sm-2 control-label no-padding-right">Tên Menu *</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtName" class="form-control" id="txtName" placeholder="Tên menu" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label no-padding-right">Menu cha *</label>
                            <label class="col-sm-10" style="padding-top: 8px; margin-bottom: 0;"><span id="lblParentMenuName"></span></label>
                            <input type="hidden" id="txtParentMenuId" />
                        </div>


                        <div class="form-group">
                            <label for="txtUrl" class="col-sm-2 control-label no-padding-right">Url</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtUrl" class="form-control" id="txtUrl">
                            </div>
                        </div>


                        <div class="modal-footer">
                            <button type="button" id="btn-save" class="btn btn-primary">Lưu</button>
                            <button type="button" id="btn-cancel" class="btn btn-secondary close" data-dismiss="modal">Đóng</button>
                        </div>


                        <div class="form-group">
                            <label for="txtSortOrder" class="col-sm-2 control-label no-padding-right">Thứ tự</label>
                            <div class="col-sm-10">
                                <input type="number" name="txtSortOrder" class="form-control" id="txtSortOrder">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="ckStatus" class="col-sm-2 control-label no-padding-right">Hoạt động</label>
                            <div class="col-sm-10">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" checked="checked" name="ckStatus" id="ckStatus">
                                        <span class="text">Kích hoạt</span>
                                    </label>
                                </div>
                            </div>
                        </div>




                    </form>
                </div>
            </div>
            
        </div>
    </div>
</div>