<div id="modal-add-edit" class="bootbox modal fade modal-darkorange in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Thông tin liên hệ</h4>
            </div>
            <div class="modal-body">
                <div id="horizontal-form">

                    <form class="form-horizontal" role="form" id="frmMaintainance">
                        <div class="form-group">
                            <input type="hidden" id="hidContactId" />
                            <label for="txtName" class="col-sm-2 control-label no-padding-right">Tên*</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtName" class="form-control" id="txtName">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="txtPhone" class="col-sm-2 control-label no-padding-right">Điện thoại*</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtPhone" class="form-control" id="txtPhone">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="txtEmail" class="col-sm-2 control-label no-padding-right">Email*</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtEmail" class="form-control" id="txtEmail">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="txtAddress" class="col-sm-2 control-label no-padding-right">Địa chỉ*</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtAddress" class="form-control" id="txtAddress">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="txtWebsite" class="col-sm-2 control-label no-padding-right">Website</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtWebsite" class="form-control" id="txtWebsite">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="txtLng" class="col-sm-2 control-label no-padding-right">Kinh độ (Lng)</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtLng" class="form-control" id="txtLng">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="txtLat" class="col-sm-2 control-label no-padding-right">Vĩ độ (Lat)</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtLat" class="form-control" id="txtLat">
                            </div>
                        </div>


                        <div class="form-group">
                            <label for="ckStatus" class="col-sm-2 control-label no-padding-right">Hoạt động</label>
                            <div class="col-sm-10">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" checked="checked" name="ckStatus" id="ckStatus">
                                        <span class="text">Kích hoạt</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="button" id="btn-save" class="btn btn-success">Lưu lại</button>
                                <button type="button" id="btn-cancel" data-dismiss="modal" class="btn btn-danger">Hủy bỏ</button>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="txtOther" class="col-sm-2 control-label no-padding-right">Khác</label>
                            <div class="col-sm-10">
                                <textarea name="txtOther" id="txtOther" rows="10" class="form-control"></textarea>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>