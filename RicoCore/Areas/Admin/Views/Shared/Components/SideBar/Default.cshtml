@model List<FunctionViewModel>
<div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
    <div class="menu_section">
        <h3>Chức năng</h3>
        <ul class="nav side-menu">
            @*@foreach (var item in Model.Where(x => string.IsNullOrEmpty(x.ParentId.ToString())))*@
                @foreach (var item in Model.Where(x => string.IsNullOrEmpty(x.ParentId.ToString())).OrderBy(x=>x.SortOrder))
                {
                    <li>
                        <a><i class="fa @item.CssClass"></i> @item.Name <span class="fa fa-chevron-down"></span></a>
                        @if (Model.Any(x => x.ParentId == item.Id))
                        {
                            <ul class="nav child_menu">
                                @foreach (var jitem in Model.Where(x => x.ParentId == item.Id).OrderBy(x => x.SortOrder))
                                {
                                    <li><a href="@jitem.Url">@jitem.Name</a></li>
                                }
                            </ul>
                        }
                    </li>
                }
        </ul>
    </div>
</div>